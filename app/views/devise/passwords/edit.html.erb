<div class="container content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
     
      <h3 class="text-center"><strong>Change your password</strong></h3>
      <br>
      
      <div class="panel panel-default">
        <div class="container">

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", :placeholder => "New password", class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm new password", class: "form-control", required: true %>
          </div>

          <div class="actions">
            <%= f.submit "Reset my password", :class => "btn btn-submit" %>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div> 
</div>