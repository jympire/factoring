<div class="container content">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h3 class="text-center"><strong>Log in</strong></h3>
      
      <br>
      
      <div class="panel panel-default">
        <div class="container">
          
          <br>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, :placeholder => "Email address", class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", class: "form-control", required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %> Remember Me
            </div>
          <% end %>
          
          <div class="actions">
            <%= f.submit "Log in", :class => "btn btn-submit btn-block" %>
          </div>
                    
          <% end %>
          
          <br>
        
        </div> 
      </div>
      
      <div class="panel panel-default">
        <p></p>
        <div class="text-center"><%= link_to "Forgot password?", new_user_password_path %></div>
          
        <center><span>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "underline" %></span></center>
        
        <p></p>
        <center><span><%= link_to "Resend confirmation instructions", new_user_confirmation_path(resource_name) %></span></center>
        <p></p>
      </div>
    </div>
  </div> 
</div>
